@using CocktailWebApp.Data.Dtos
@model List<DrinkDto>

@{
    ViewData["Title"] = "Drinks in Category";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-3 page-title">Drinks in Category</h1>
        <p class="lead">Browse through the best cocktails in this category. Click on a drink to learn more!</p>
    </div>

    <!-- Drinks List -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var drink in Model)
        {
            <div class="col">
                <div class="drink-card">
                    <!-- Drink Thumbnail -->
                    <img src="@drink.ImageUrl" alt="@drink.Name" class="drink-img" />

                    <div class="card-body text-center">
                        <!-- Drink Name as clickable link -->
                        <a asp-controller="Cocktail" asp-action="@ViewBag.ActionName" asp-route-id="@drink.Id" class="drink-title">
                            @drink.Name
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
