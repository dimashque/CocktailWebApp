@{
    ViewData["Title"] = "Welcome to Cocktail World";
}

<!-- Hero Section -->
<div class="hero">
    <div class="container text-center">
        <h1 class="display-3">Welcome to Cocktail World</h1>
        <p class="lead">Discover, Explore, and Get Inspired with the Best Cocktail Recipes!</p>
        <a href="@Url.Action("Index", "Cocktail")" class="btn btn-primary btn-lg mt-3 hero-btn">Start Exploring</a>
    </div>
</div>

<!-- Featured Categories Section -->
<div class="container mt-5">
    <div class="row text-center">
        <div class="col-12">
            <h2 class="display-4 section-title">Explore Cocktail Categories</h2>
            <p class="lead">Find the perfect cocktail for every occasion.</p>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <div class="col">
            <div class="category-card">
                <img src="https://via.placeholder.com/300" class="card-img-top" alt="Classic Cocktails">
                <div class="card-body text-center">
                    <h5 class="card-title">Classic Cocktails</h5>
                    <a href="@Url.Action("Category", "Cocktail", new { id = "Cocktail" })" class="btn btn-outline-light">View Recipes</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="category-card">
                <img src="https://via.placeholder.com/300" class="card-img-top" alt="Party Drinks">
                <div class="card-body text-center">
                    <h5 class="card-title">Party Drinks</h5>
                    <a href="@Url.Action("Category", "Cocktail", new { id = "Punch" })" class="btn btn-outline-light">View Recipes</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="category-card">
                <img src="https://via.placeholder.com/300" class="card-img-top" alt="Seasonal Cocktails">
                <div class="card-body text-center">
                    <h5 class="card-title">Seasonal Cocktails</h5>
                    <a href="@Url.Action("Category", "Cocktail", new { id = "Cocoa" })" class="btn btn-outline-light">View Recipes</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Cocktail of the Week -->
<div class="cocktail-week">
    <div class="container text-center">
        <h2 class="display-4">Cocktail of the Week</h2>
        <div class="cocktail-card">
            <img src="https://via.placeholder.com/500" alt="Cocktail of the Week">
            <div class="cocktail-info">
                <h5>Margarita</h5>
                <p>A refreshing cocktail made with tequila, lime, and triple sec. Perfect for any occasion!</p>
                <a href="@Url.Action("Detail", "Cocktail", new { id = "110" })" class="btn btn-primary">Get Recipe</a>
            </div>
        </div>
    </div>
</div>

<!-- Testimonials Section -->
<div class="container testimonials">
    <h2 class="display-4 text-center">What People Are Saying</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="testimonial-card">
                <p>"I found the perfect drink for my party! Easy to follow recipes and delicious results." – Sarah T.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="testimonial-card">
                <p>"Cocktail World has completely transformed my home bartending experience. Highly recommend!" – James K.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="testimonial-card">
                <p>"I love trying new recipes every week! Cocktail World has become my go-to for creative cocktails." – Emily L.</p>
            </div>
        </div>
    </div>
</div>

